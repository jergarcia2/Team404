<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Team404</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    
                <!--Navbar Logo -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Team404</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>

                     <!-- Computer Parts Nav Start -->
                    <li class="dropdown">
                        <a asp-area="" asp-controller="ComputerParts" asp-action="Index" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle" 
                            data-toggle="dropdown" role="button">Computer Parts<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/ComputerParts/Cases">Cases</a></li>
                            <li><a href="~/ComputerParts/Processors">Processors</a></li>
                            <li role="separator" class="divider"></li> <!-- Optional Divider -->
                            <li><a href="~/ComputerParts/Motherboards">Motherboards</a></li>
                            <li><a href="~/ComputerParts/Memory">Memory</a></li>
                            <li><a href="~/ComputerParts/CoolingSystems">Cooling Systems</a></li>
                            <li><a href="~/ComputerParts/SoundCards">Sound Cards</a></li>
                            <li><a href="~/ComputerParts/VideoCards">Video Cards</a></li>
                            <li><a href="~/ComputerParts/PowerSupply">Power Supply</a></li>
                        </ul>
                    </li>
                    <!-- Computer Parts Nav End -->
                        
                    <!-- Accessories Nav Start -->
                    <li class="dropdown">
                        <a asp-area="" asp-controller="Accessories" asp-action="Index" class="dropdown-toggle"
                            data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Accessories<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Accessories/Chargers">Chargers</a></li>
                            <li><a href="~/Accessories/Adapter">Adapter</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="~/Accessories/MiscCables">Misc. Cables</a></li>
                            <li><a href="~/Accessories/Memory">Memory</a></li>
                            <li><a href="~/Accessories/HeadPhones">Head Phones</a></li>
                            <li><a href="~/Accessories/StorageDevices">Storage Devices</a></li>
                        </ul>
                    </li>
                    <!-- Accessories Nav End -->

                    <!-- Bundles Nav Start -->
                    <li class="dropdown">
                        <a asp-area="" asp-controller="Bundles" asp-action="Index" class="dropdown-toggle" 
                            data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bundles<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Beginner</a></li>
                            <li><a href="#">Mid-Grade</a></li>
                            <li><a href="#">Professional</a></li>
                        </ul>
                    </li>
                    <!-- Bundles Nav End -->
                    <!-- Contact Nav -->
                </ul>
                <ul class="nav navbar-nav navbar-right pull-right" id="groupnav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                </ul> <!-- End Contact Nav -->
            </div> <!-- End navbar-collapse -->
        </div> <!-- End nav container -->
    </nav> <!-- End Nav Bar -->

    <!-- Body Start -->    
    <div class="container body-content">
            <div class="row">
                <div class="col-md-12" id="">
                    <h1>@ViewBag.Title</h1>
                </div>
            </div>
            @RenderBody()
            <div class="row">
                <div class="col-md-3" id="filter">
                    <h2>@ViewBag.SideBarTitle</h2>
                </div>
                <div class="col-md-7" id="maincontent">
                    <h2>@ViewBag.MainTitle</h2>
                </div>
            </div>
        <div class="row">
            <div class="col-md-12">
                <footer id="sitemap">
                    <p>&copy; @DateTime.Now.Year - Team 404</p>
                </footer>
            </div>
        </div>
    </div>
    <!-- Body End -->
        
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
