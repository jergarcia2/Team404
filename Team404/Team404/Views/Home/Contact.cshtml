@{
    ViewData["PageTitle"] = "Contact Me";
    ViewData["PageName"] = "Contact";
}
@section css {
    <link href="~/css/ContactCSS.css" rel="stylesheet" type="text/css"/>
}

<h2>@ViewData["PageTitle"]</h2>

<h3>Feedback Form</h3>
    <form method="post" action="~/Home/Contact" id="feedback_form">
        <label for="contact_name">Name:</label>
        <input type="text" name="ContactName" id="contact_name" placeholder="Your Name..." maxlength="50" >

        <label for="contact_email">Email Address:</label>
        <input type="email" name="ContactEmail" id="contact_email" placeholder="Your Email Address..." maxlength="50" >

        <label for="contact_phone">Phone Number:</label>
        <input type="tel" name="ContactPhone" id="contact_phone" placeholder="Your Phone Number..." maxlength="50">

        <label for="contact_purpose">Purpose:</label>
        <select size="1" name="ContactPurpose" id="contact_purpose">
                        <option value="">Please Select a Purpose</option>
                        <option value="comment">Site Comment</option>
                        <option value="question">General Question</option>
                        <option value="employment">Employment Opportunity</option>
                        <option value="message">Personal Message</option>
                    </select>

        <label for="contact_message">Message:</label>
        <textarea name="ContactMessage" id="contact_message" placeholder="Your message comments here..." ></textarea>
        <input type="submit" value="Submit">
    </form>
<address>
